<div class="page-container">
  <div class="page-header">
    <h1>Travel Preferences</h1>
    <p>Tell us about yourself to find compatible travel companions</p>
  </div>
  
  <div class="preferences-container">
    <div class="card">
      <form class="preferences-form">
        <div class="form-group">
          <label for="age">Your Age</label>
          <input type="number" id="age" name="age" min="18" max="100" required>
        </div>
        
        <div class="form-group">
          <label for="interests">Travel Interests</label>
          <div class="interests-options">
            <div class="interest-option">
              <input type="checkbox" id="adventure" name="interests" value="adventure">
              <label for="adventure">Adventure</label>
            </div>
            <div class="interest-option">
              <input type="checkbox" id="culture" name="interests" value="culture">
              <label for="culture">Culture</label>
            </div>
            <div class="interest-option">
              <input type="checkbox" id="food" name="interests" value="food">
              <label for="food">Food &amp; Cuisine</label>
            </div>
            <div class="interest-option">
              <input type="checkbox" id="nightlife" name="interests" value="nightlife">
              <label for="nightlife">Nightlife</label>
            </div>
            <div class="interest-option">
              <input type="checkbox" id="nature" name="interests" value="nature">
              <label for="nature">Nature &amp; Outdoors</label>
            </div>
            <div class="interest-option">
              <input type="checkbox" id="relaxation" name="interests" value="relaxation">
              <label for="relaxation">Relaxation</label>
            </div>
            <div class="interest-option">
              <input type="checkbox" id="shopping" name="interests" value="shopping">
              <label for="shopping">Shopping</label>
            </div>
            <div class="interest-option">
              <input type="checkbox" id="history" name="interests" value="history">
              <label for="history">History</label>
            </div>
          </div>
          
          <div class="custom-interest">
            <label for="custom-interest">Other Interest (optional)</label>
            <input type="text" id="custom-interest" name="customInterest" placeholder="Enter any other interest">
          </div>
        </div>
        
        <div class="form-group">
          <label for="location">Preferred Destination</label>
          <input type="text" id="location" name="location" placeholder="Enter your preferred destination" required>
        </div>
        
        <div class="form-group">
          <label for="budget">Budget Range (USD)</label>
          <div class="budget-range">
            <select id="budget" name="budget" required>
              <option value="" disabled selected>Select your budget</option>
              <option value="budget">Budget (Under $1,000)</option>
              <option value="moderate">Moderate ($1,000 - $3,000)</option>
              <option value="luxury">Luxury ($3,000 - $5,000)</option>
              <option value="ultraluxury">Ultra Luxury ($5,000+)</option>
            </select>
          </div>
        </div>
        
        <div class="form-actions">
          <button type="submit" class="button primary">Find Travel Partners</button>
          <button type="button" class="button secondary save-preferences-btn">Save Preferences</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/preferences.js"></script> 